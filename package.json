{
  "name": "glyphmd",
  "version": "1.3.2",
  "description": "A CLI markdown viewer with FIGlet ASCII art headings and a full-screen terminal pager",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "glyphmd": "./bin/glyph.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node bin/glyph.js",
    "prepare": "tsc"
  },
  "keywords": [
    "markdown",
    "cli",
    "terminal",
    "viewer",
    "figlet",
    "pager"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keshavvinayak01/glyph"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "figlet": "^1.7.0",
    "marked": "^12.0.2",
    "meow": "^12.1.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/node": "^25.3.0",
    "typescript": "^5.4.0"
  }
}
